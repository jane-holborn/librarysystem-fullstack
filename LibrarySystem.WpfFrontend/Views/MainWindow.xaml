<Window x:Class="LibrarySystem.WpfFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarySystem.WpfFrontend"
        mc:Ignorable="d"
        Height="550" Width="700"
        WindowStyle="None"
        Background="Transparent">
    <Border Background="#F4F0ED" BorderBrush="#3B3B3B"  BorderThickness="1" CornerRadius="10">
        <Grid>
            <Button x:Name="BtnLoadUsers" Content="Load Users" Style="{StaticResource RoundedButton}" HorizontalAlignment="Left" Margin="147,199,0,0" VerticalAlignment="Top" Click="BtnLoadUsers_Click"/>
            <Button x:Name="BtnLoadBooks" Content="Load Books" Style="{StaticResource RoundedButton}" HorizontalAlignment="Left" Margin="147,244,0,0" VerticalAlignment="Top"/>
            <ListBox x:Name="ListBoxUsers" DisplayMemberPath="Name" Margin="290,65,110,65" Width="200" Height="150"/>
        </Grid>
    </Border>
</Window>
